<div class="ui center aligned container" style="width:60%">
  <div class="ui container">
    <div class="ui segment">
    <%= form_for @nominee, html: {class: "ui form"}, method: :post, class: "ui form",  multipart: true do |f| %>
  <ul>
  <% @nominee.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <div class="field">
    <% if @awards%>
      <label>Select Award</label>
      <select class="ui dropdown" name="award" required= "true">                          
          <option value="">Select Award</option>
        <% @awards.each do |award| %>                    
          <option value="<%= award.id %>"><%= award.name %></option>                                    
        <% end %>
      </select>
    <% else %>                  
      <label>No Awards Created</label>
    <% end %>
  </div>
  <div class="field" style="font-size: 1.3em;">
    <%= f.label :first_name%><br />
    <%= f.text_field :first_name, required: true, placeholder: "First Name", autofocus: true %>
  </div>
  <div class="field" style="font-size: 1.3em;">
    <%= f.label :last_name%><br />
    <%= f.text_field :last_name, required: true, placeholder: "Last Name" %>
  </div>

  <div class="field" style="font-size: 1.3em;">
    <%= f.label :biography%><br />
    <%= f.text_area :biography, required: true, placeholder: "Add a biography" %>
  </div>
  <div class="field">
    <%= f.file_field "video", class: "ui button", accept: "image/*"%>
  </div>
  <p>
    <%= f.submit "Nominate", class: "ui primary button", style: "font-size: 1.2em;"%>
  </p>
  
<% end %>
</div>

</div>
</div>